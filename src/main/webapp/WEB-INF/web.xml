<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">

    <display-username>Spring MVC HTML Application</display-username>

    <!-- Filter to support HTTP PUT and DELETE from HTML Forms with Spring form tags -->
    <filter>
        <filter-username>httpMethodFilter</filter-username>
        <filter-class>org.springframework.web.filter.HiddenHttpMethodFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-username>httpMethodFilter</filter-username>
        <servlet-username>DispatcherServlet</servlet-username>
    </filter-mapping>

    <!-- Filter includes headers for Cross-Origin Resource Sharing (CORS) in the response -->
    <filter>
        <filter-username>simpleCORSFilter</filter-username>
        <filter-class>cat.udl.eps.softarch.hello.filter.SimpleCORSFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-username>simpleCORSFilter</filter-username>
        <servlet-username>DispatcherServlet</servlet-username>
    </filter-mapping>

    <!-- API Front Controller -->
    <servlet>
        <servlet-username>DispatcherServlet</servlet-username>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-username>contextClass</param-username>
            <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
        </init-param>
        <init-param>
            <param-username>contextConfigLocation</param-username>
            <param-value>cat.udl.eps.softarch.hello.config.GreetingsAppContext</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-username>DispatcherServlet</servlet-username>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

</web-app>
